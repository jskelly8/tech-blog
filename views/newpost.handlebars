<main style="margin: 12vh">
    {{!-- Page title --}}
    <h3>Create a New Post</h3>
    
    {{!-- New post form --}}
    <form id="newPost">
        <div class="mb-3">
            <label for="newPostTitle" class="form-label">Title: </label>
            <input type="text" class="form-control" id="newPostTitle" placeholder="Title of New Post">
        </div>

        <div class="mb-3">
            <label for="newPostContent" class="form-label">Content: </label>
            <textarea class="form-control" id="newPostContent" rows="6" placeholder="Blog Content . . ."></textarea>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Post</button>
        </div>
    </form>
</main>
{{!-- JS link --}}
<script src="/js/newPost.js"></script>